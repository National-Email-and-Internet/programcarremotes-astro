---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Disclaimer' },
];
---

