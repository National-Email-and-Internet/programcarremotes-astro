---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Contact' },
];
---

<BaseLayout title="Contact Us" description="Contact Program Car Remotes with questions or feedback.">
  <Breadcrumbs items={breadcrumbs} />
  
  <div class="max-w-3xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Contact Us</h1>
    
    <div class="prose prose-lg mb-8">
      <p>
        Have a question about programming your key fob? Found an error in our instructions? 
        We'd love to hear from you.
      </p>
    </div>
    
    <div class="bg-white rounded-xl shadow-sm p-8">
      <form action="https://formspree.io/f/placeholder" method="POST" class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
          <input type="text" name="name" id="name" required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary">
        </div>
        
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <input type="email" name="email" id="email" required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary">
        </div>
        
        <div>
          <label for="vehicle" class="block text-sm font-medium text-gray-700 mb-1">Vehicle (optional)</label>
          <input type="text" name="vehicle" id="vehicle" placeholder="e.g., 2008 Honda Civic"
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary">
        </div>
        
        <div>
          <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
          <textarea name="message" id="message" rows="5" required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"></textarea>
        </div>
        
        <button type="submit" 
          class="w-full bg-primary text-white py-3 rounded-lg font-semibold hover:bg-accent transition">
          Send Message
        </button>
      </form>
    </div>
    
    <div class="mt-8 text-center text-gray-600">
      <p>We typically respond within 1-2 business days.</p>
    </div>
  </div>
</BaseLayout>
