---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Privacy Policy' },
];
---

<BaseLayout title="Privacy Policy" description="Privacy policy for Program Car Remotes.">
  <Breadcrumbs items={breadcrumbs} />
  
  <div class="max-w-3xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Privacy Policy</h1>
    
    <div class="prose prose-lg">
      <p><em>Last updated: February 2026</em></p>
      
      <h2>Information We Collect</h2>
      <p>
        We use Google Analytics to understand how visitors use our site. This includes:
      </p>
      <ul>
        <li>Pages visited</li>
        <li>Time spent on site</li>
        <li>Device and browser type</li>
        <li>Geographic region (country/city level)</li>
      </ul>
      
      <h2>Cookies</h2>
      <p>
        Google Analytics uses cookies to track site usage. You can opt out by using 
        browser privacy settings or the Google Analytics opt-out browser add-on.
      </p>
      
      <h2>Third-Party Links</h2>
      <p>
        Our site may contain links to third-party websites. We are not responsible 
        for the privacy practices of these sites.
      </p>
      
      <h2>Contact</h2>
      <p>
        Questions about this policy? Contact us through our website.
      </p>
    </div>
  </div>
</BaseLayout>
