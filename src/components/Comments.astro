---
interface Props {
  pageId: string;
  pageTitle?: string;
}

const { pageId, pageTitle } = Astro.props;
const CUSDIS_HOST = "https://comments.natinternet.com";
const APP_ID = "b9309279-ec0e-4a9c-a399-ded44e321924";
---

<section class="mt-12">
  <div class="bg-gray-50 rounded-xl shadow-sm p-6">
    <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center gap-2">
      <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
      </svg>
      Comments
    </h2>
    
    <div id="cusdis_thread"
      data-host={CUSDIS_HOST}
      data-app-id={APP_ID}
      data-page-id={pageId}
      data-page-url={Astro.url.href}
      data-page-title={pageTitle || pageId}
    ></div>
  </div>
</section>

<script is:inline>
  window.CUSDIS_LOCALE = {
    powered_by: 'Comments powered by Cusdis',
    post_comment: 'Post Comment',
    loading: 'Loading...',
    email: 'Email (optional)',
    nickname: 'Name',
    reply: 'Reply',
    mod_badge: 'Admin',
    content: 'Comment',
    comment: 'Comment',
    sending: 'Sending...',
    email_required: 'Email is required for replies',
  };
</script>
<script is:inline src="https://comments.natinternet.com/js/cusdis.umd.js" defer></script>
