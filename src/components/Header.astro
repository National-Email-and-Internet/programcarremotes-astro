---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/makes/', label: 'All Makes' },
  { href: '/troubleshooting/', label: 'Troubleshooting' },
  { href: '/about/', label: 'About' },
];

const currentPath = Astro.url.pathname;
---

<header class="bg-primary text-white no-print">
  <div class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
    <a href="/" class="flex items-center gap-3 group">
      <div class="w-10 h-10 bg-accent rounded-lg flex items-center justify-center group-hover:scale-105 transition">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
        </svg>
      </div>
      <div>
        <div class="font-bold text-lg leading-tight">Program Car Remotes</div>
        <div class="text-xs text-blue-200">Free DIY Key Fob Instructions</div>
      </div>
    </a>
    
    <!-- Desktop Nav -->
    <nav class="hidden md:flex gap-6 text-sm">
      {navItems.map(item => (
        <a 
          href={item.href} 
          class:list={[
            "hover:text-accent transition",
            { "text-accent font-medium": currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href)) }
          ]}
        >
          {item.label}
        </a>
      ))}
    </nav>
    
    <!-- Mobile Menu Button -->
    <button 
      class="md:hidden p-2 hover:bg-white/10 rounded-lg transition"
      id="mobile-menu-btn"
      aria-label="Toggle menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </div>
  
  <!-- Mobile Nav -->
  <nav class="md:hidden hidden border-t border-blue-800" id="mobile-menu">
    <div class="px-4 py-4 space-y-3">
      {navItems.map(item => (
        <a 
          href={item.href} 
          class:list={[
            "block py-2 hover:text-accent transition",
            { "text-accent font-medium": currentPath === item.href }
          ]}
        >
          {item.label}
        </a>
      ))}
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
