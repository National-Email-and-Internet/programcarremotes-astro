---
const currentYear = new Date().getFullYear();

const popularMakes = [
  { name: 'Ford', href: '/ford/' },
  { name: 'Honda', href: '/honda/' },
  { name: 'Toyota', href: '/toyota/' },
  { name: 'Chevrolet', href: '/chevrolet/' },
  { name: 'Nissan', href: '/nissan/' },
  { name: 'Jeep', href: '/jeep/' },
];

const resources = [
  { name: 'All Makes', href: '/makes/' },
  { name: 'Troubleshooting', href: '/troubleshooting/' },
  { name: 'Find a Locksmith', href: '/locksmith/' },
  { name: 'About Us', href: '/about/' },
  { name: 'Contact', href: '/contact/' },
];

const legal = [
  { name: 'Privacy Policy', href: '/privacy/' },
  { name: 'Terms of Use', href: '/terms/' },
  { name: 'Disclaimer', href: '/disclaimer/' },
];
---

<footer class="bg-primary text-white py-12 mt-auto no-print">
  <div class="max-w-6xl mx-auto px-4">
    <div class="grid md:grid-cols-4 gap-8 mb-8">
      
      <!-- Brand -->
      <div>
        <div class="flex items-center gap-2 mb-4">
          <div class="w-8 h-8 bg-accent rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
            </svg>
          </div>
          <span class="font-bold text-lg">Program Car Remotes</span>
        </div>
        <p class="text-blue-200 text-sm">
          Free DIY key fob programming instructions since 2010. Created by The Remote Guy.
        </p>
      </div>
      
      <!-- Popular Makes -->
      <div>
        <div class="font-semibold mb-4">Popular Makes</div>
        <ul class="space-y-2 text-sm text-blue-200">
          {popularMakes.map(item => (
            <li>
              <a href={item.href} class="hover:text-white transition">{item.name}</a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Resources -->
      <div>
        <div class="font-semibold mb-4">Resources</div>
        <ul class="space-y-2 text-sm text-blue-200">
          {resources.map(item => (
            <li>
              <a href={item.href} class="hover:text-white transition">{item.name}</a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Legal -->
      <div>
        <div class="font-semibold mb-4">Legal</div>
        <ul class="space-y-2 text-sm text-blue-200">
          {legal.map(item => (
            <li>
              <a href={item.href} class="hover:text-white transition">{item.name}</a>
            </li>
          ))}
        </ul>
      </div>
      
    </div>
    
    <div class="border-t border-blue-800 pt-8 text-center text-sm text-blue-200">
      Â© {currentYear} ProgramCarRemotes.com. All rights reserved.
    </div>
  </div>
</footer>
